FROM node:20-slim

# Install minimal system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy app source
COPY . .

# Rebuild better-sqlite3 from source
RUN npm rebuild better-sqlite3

# Start the bot
CMD ["npm", "run", "dev"]
